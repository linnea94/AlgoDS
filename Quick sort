		public static void Main(string[] args)

			{
				int[] integerValues = {-11, 12, -42, 0, 1, 90, 68, 6, -9};
				QuickSort.Sort(integerValues);
				Console.WriteLine(string.Join(" | ", integerValues)); 
			}

